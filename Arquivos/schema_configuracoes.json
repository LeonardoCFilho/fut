{
  "version": "1.2",
  "description": "Schema para os valores de configurações",
  "configuracoes": {
    "timeout": {
      "type": "integer",
      "default": 30,
      "minimum": 15,
      "maximum": 3000, 
      "description": "Tempo máximo para a execução do validator_cli",
      "category": "desempenho"
    },
    "max_threads": {
      "type": "integer", 
      "default": 4,
      "minimum": 1,
      "maximum": 32,
      "description": "Número máximo de threads",
      "category": "desempenho"
    },
    "requests_timeout": {
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "maximum": 1200,
        "description": "Tempo máximo para as HTTP requests",
        "category": "desempenho"
    },
    "caminho_validator": {
      "type": "path",
      "default": "default",
      "description": "Path do validator_cli",
      "category": "enderecamento",
      "validation": {
        "file_extensions": [".jar", ".exe"]
      }
    },
    "armazenar_saida_validator": {
      "type": "boolean",
      "default": true,
      "description": "Determina se os arquivos do validator_cli serão armazendados ou não",
      "category": "enderecamento"
    },
    "tipo_relatorio": {
      "type": "string",
      "default": "HTML",
      "description": "Determina o tipo do relatório que será criado",
      "category": "relatorio"
    }
  }
}